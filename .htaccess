RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/src/page/%{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+?)/?$ /src/page/$1.php [L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/src/page/%{REQUEST_FILENAME}\.html -f
RewriteRule ^(.+?)/?$ /src/page/$1.html [L]

ErrorDocument 404 /src/page/404.html
ErrorDocument 500 /src/page/500.html
ErrorDocument 403 /src/page/403.html
